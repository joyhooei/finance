<div class="simulation_submit">
  <%= flash[:notice] %>
  <table id="simulation_table">
    <tr>
      <td id="simulation_table_tr_td">
        <%= form_tag("/simulation/simulate_pay", method: "post") do %>
          <%= label_tag(:label1, "simulation inteface call") %> </br>
          <%= label_tag(:label2, "please choose payway:") %> </br>
          <%= radio_button_tag(:payway, "paypal") %>
          <%= label_tag(:payway_paypal, "PAYPAL") %>
          <%= radio_button_tag(:payway, "sofort") %>
          <%= label_tag(:payway_sofort, "SOFORT") %>
          <%= radio_button_tag(:payway, "alipay_oversea") %>
          <%= label_tag(:payway_alipay_oversea, "ALIPAY_OVERSEA") %>
