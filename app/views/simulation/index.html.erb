          <%= submit_tag("call") %>
        <% end %>
      </td>
      <td id="simulation_table_tr_td">
        <%= form_tag("/simulation/simulate_pay_credit", method: "post") do %>
          <%= label_tag(:label1, "simulation inteface call") %> </br>
          <%= radio_button_tag(:credit, "credit") %>
          <%= label_tag(:pay_credit, "CREDIT") %><br/>
          trade_no:<%= text_field_tag(:trade_no) %> <br/>
          amount:<%= text_field_tag(:amount,0.01) %> <br/>
          </br>  </br>
          <%= submit_tag("credit_call") %>
        <% end %>
      </td>
    </tr>
  </table>
</div>
