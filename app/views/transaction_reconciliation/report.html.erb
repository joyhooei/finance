<div class="container-fluid">
<% @page_title="交易汇总" %>
	<div class="row-fluid">
		<div class="alert alert-info">
			<button type="button" class="close" data-dismiss="alert">×</button>
			<strong>提示:</strong> 请输入查询条件进行查询!(时间段必输)
		</div>
		<div class="row-fluid">
			<div class="well">
			<%= form_tag transaction_reconciliation_report_path,method:"get",remote: :true do %>
				 <%= label_tag(:l1, "支付类型:",class:"label_inline") %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				 <%= select_tag(:payway,options_for_select(dynamic_payway_select_tag)) %> 
				 &nbsp;&nbsp;
				 <%= label_tag(:l2, "支付子类型:",class:"label_inline") %>&nbsp;&nbsp;&nbsp;&nbsp;
				 <%= select_tag(:paytype,options_for_select(dynamic_paytype_select_tag)) %>
				 &nbsp;&nbsp;&nbsp;
				 <%= label_tag(:l11, "订单类型:",class:"label_inline") %>
				 <%= select_tag(:order_type,options_for_select(dynamic_order_type_select_tag)) %>  
				 </br>
				 <%= label_tag(:l3, "货币:",class:"label_inline") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				 <%= select_tag(:currency,options_for_select([["",""],["EUR","EUR"],["GBP","GBP"],["RMB","RMB"]])) %> 
				 &nbsp;&nbsp;
				 <%= label_tag(:l6, "国家:",class:"label_inline") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				 <%= select_tag(:send_country,options_for_select(dynamic_send_country_select_tag)) %>
				 </br>
				 <%= label_tag(:l4, "交易开始时间:",class:"label_inline") %> <%= datetime_field_tag(:start_time) %>
				 &nbsp;&nbsp;
				 <%= label_tag(:l5, "交易结束时间:",class:"label_inline") %> <%= datetime_field_tag(:end_time) %>
				 <div class="btn-toolbar">
					 <%= submit_tag("查询",class: "btn btn-primary",id: "button_submit_time",data: {disable_with: '查询中.'}) %>
				          	<%=button_tag("清除条件",type: 'button',class: "btn",id: "button_clear") %>
			          	</div>
			<% end %>
			</div>
		</div>
	</div>

	<div class="row-fluid">
		<div class="well">
			<table class="table">
				<tr>
					<td>总交易比数</td>
					<td id="td_replace_total_num"><%=@finance_summary.total_num%></td>
					<td>总交易金额</td>
					<td id="td_replace_total_amount"><%=@finance_summary.total_amount%></td>
				</tr>
				<tr>
					<td>成功比数</td>
					<td id="td_replace_succ_num"><%=@finance_summary.succ_num%></td>
					<td>成功金额</td>
					<td id="td_replace_succ_amount"><%=@finance_summary.succ_amount%></td>
				</tr>
				<tr>
					<td>成功(异常)比数</td>
					<td id="td_replace_succ_execption_num"><%=@finance_summary.succ_execption_num%></td>
					<td>成功(异常)金额</td>
					<td id="td_replace_succ_execption_amount"><%=@finance_summary.succ_execption_amount%></td>
				</tr>
				<tr>
					<td>失败交易比数</td>
					<td id="td_replace_fail_num"><%=@finance_summary.fail_num%></td>
					<td>失败交易金额</td>
					<td id="td_replace_fail_amount"><%=@finance_summary.fail_amount%></td>
				</tr>
				<tr>
					<td>未完成交易比数</td>
					<td id="td_replace_uncompleted_num"><%=@finance_summary.uncompleted_num%></td>
					<td>未完成交易金额</td>
					<td id="td_replace_uncompleted_amount"><%=@finance_summary.uncompleted_amount%></td>
				</tr>
			</table>
		</div>
	</div>
</div>